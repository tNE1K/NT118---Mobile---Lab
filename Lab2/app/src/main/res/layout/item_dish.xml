<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:id="@+id/item_dish_iv"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_DishName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_blur"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/item_dish_iv"
        app:layout_constraintEnd_toEndOf="@id/item_dish_iv"
        app:layout_constraintStart_toStartOf="@id/item_dish_iv"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/star"
        app:layout_constraintTop_toTopOf="@id/tv_DishName"
        app:layout_constraintRight_toRightOf="@id/tv_DishName"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:id="@+id/iv_isPromo"
        android:visibility="gone"/>




</androidx.constraintlayout.widget.ConstraintLayout>